<UserControl
    x:Class="SamynixLevlingGuide.View.StepView.StepView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SamynixLevlingGuide.View.StepView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <local:StepViewModel />
    </UserControl.DataContext>

    <UserControl.Background>
        <SolidColorBrush Color="{Binding MainViewModel.Instance+TextBackgroundColor}" />
    </UserControl.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource GuideTitleStyle}" Text="{Binding Title}" />
        <ItemsControl Grid.Row="1" ItemsSource="{Binding SubStepItemsSource}" />

    </Grid>

</UserControl>
